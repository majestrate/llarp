{
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"features": {
		"ghcr.io/devcontainers-contrib/features/apt-packages:1": {
			"clean_ppas": true,
			"preserve_apt_list": true,
			"packages": [
				"build-essential",
				"ccache",
				"clang", "clang-tidy", "clang-tools", "clang-format",
				"cmake",
				"pkg-config",
				"libsodium-dev",
				"libevent-dev",
				"libsystemd-dev"
			],
			"ppas": "ppa:deadsnakes/ppa"
		}
	}
}